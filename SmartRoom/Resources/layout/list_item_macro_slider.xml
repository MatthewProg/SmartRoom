<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_material_light">
    <ImageView
        android:id="@+id/list_item_macro_slider_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_play"
        android:tint="@android:color/holo_green_dark"
        android:contentDescription="@string/accessibility_macro_current" 
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingRight="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/list_item_macro_slider_title"
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@android:string/untitled"
                android:fontFamily="sans-serif"
                android:textFontWeight="600"
                android:autoSizeMaxTextSize="18dp"
                android:autoSizeMinTextSize="11dp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="2dp"
                android:textSize="18dp"
                android:maxLines="1"/>
        <ImageButton
                android:id="@+id/list_item_macro_slider_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/accessibility_edit"
                android:src="@drawable/ic_edit"
                android:paddingHorizontal="20dp"
                android:paddingVertical="3dp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark" />
        <ImageButton
            android:id="@+id/list_item_macro_slider_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/accessibility_delete"
            android:src="@drawable/ic_trash"
            android:paddingHorizontal="20dp"
            android:paddingVertical="3dp"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:background="@android:color/transparent"
            android:tint="@color/button_material_dark" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="@string/text_fade"/>
                <CheckBox
                    android:id="@+id/list_item_macro_slider_fade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
                    android:layout_weight="1"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%"
                android:textSize="12dp"
                android:layout_gravity="center_vertical|left"/>
            <SeekBar
                android:id="@+id/list_item_macro_slider_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="100"
                android:progress="0"
                android:layout_weight="1"
                android:layout_gravity="fill_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100%"
                android:textSize="12dp"
                android:layout_gravity="center_vertical|right"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>