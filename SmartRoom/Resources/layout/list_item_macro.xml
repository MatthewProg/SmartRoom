<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/list_item_macro_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/accessibility_more" 
                android:src="@drawable/ic_arrow_more"
                android:paddingHorizontal="3dp"
                android:paddingVertical="4dp"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark"/>
            <TextView
                android:id="@+id/list_item_macro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/list_item_macro_expand"
                android:layout_toLeftOf="@id/list_item_macro_playpause"
                android:text="@string/text_untitled"/>
            <ImageButton
                android:id="@+id/list_item_macro_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/accessibility_delete" 
                android:src="@drawable/ic_trash"
                android:paddingHorizontal="3dp"
                android:paddingVertical="4dp"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark"/>
            <ImageButton
                android:id="@+id/list_item_macro_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/list_item_macro_delete"
                android:contentDescription="@string/accessibility_repeat" 
                android:src="@drawable/ic_repeat"
                android:paddingHorizontal="3dp"
                android:paddingVertical="4dp"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark"/>
            <ImageButton
                android:id="@+id/list_item_macro_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/list_item_macro_repeat"
                android:contentDescription="@string/accessibility_stop" 
                android:src="@drawable/ic_stop"
                android:paddingHorizontal="3dp"
                android:paddingVertical="4dp"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark"/>
            <ImageButton
                android:id="@+id/list_item_macro_playpause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/list_item_macro_stop"
                android:contentDescription="@string/accessibility_play" 
                android:src="@drawable/ic_play"
                android:paddingHorizontal="3dp"
                android:paddingVertical="4dp"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_item_macro_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
