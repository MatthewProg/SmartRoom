<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="5dp"
    android:background="@color/background_material_light">
    <ImageView
        android:id="@+id/list_item_macro_delay_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_play"
        android:tint="@android:color/holo_green_dark"
        android:contentDescription="@string/accessibility_macro_current" 
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="clip_horizontal|center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/text_delay"
            android:textSize="18dp"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/list_item_macro_delay_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="18dp"
            android:text="0"
            android:gravity="right"
            android:minEms="3"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/text_milisec"
            android:textSize="18dp"
            android:maxLines="1"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/list_item_macro_delay_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/accessibility_delete"
        android:src="@drawable/ic_trash"
        android:paddingHorizontal="20dp"
        android:paddingVertical="3dp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:background="@android:color/transparent"
        android:tint="@color/button_material_dark" />
</LinearLayout>