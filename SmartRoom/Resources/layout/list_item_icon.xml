<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/list_item_icon_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/accessibility_icon" 
        android:src="@drawable/ic_add"
        app:shapeAppearanceOverlay="@style/AppTheme.ImageViewRounded"
        android:background="@color/colorAccent"
        app:contentPadding="8dp"
        android:padding="3dp"
        android:tint="@color/foreground_material_dark"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_item_icon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:textStyle="bold"
            android:text="@string/text_untitled" />
        <TextView
            android:id="@+id/list_item_icon_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dip"
            android:text="@string/text_untitled"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>
