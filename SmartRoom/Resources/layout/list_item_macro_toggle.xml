<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_material_light">

    <ImageView
        android:id="@+id/list_item_macro_toggle_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:tint="@android:color/holo_green_dark"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/accessibility_macro_current" 
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_macro_toggle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@android:string/untitled"
                android:textStyle="bold"
                android:autoSizeMaxTextSize="18dp"
                android:autoSizeMinTextSize="11dp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="2dp"
                android:textSize="18dp"
                android:maxLines="1"/>
            <ImageButton
                android:id="@+id/list_item_macro_toggle_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/accessibility_edit"
                android:src="@drawable/ic_edit"
                android:paddingHorizontal="20dp"
                android:paddingVertical="3dp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark" />
            <ImageButton
                android:id="@+id/list_item_macro_toggle_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/accessibility_delete"
                android:src="@drawable/ic_trash"
                android:paddingHorizontal="20dp"
                android:paddingVertical="3dp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:background="@android:color/transparent"
                android:tint="@color/button_material_dark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="@string/text_fade"/>
                <CheckBox
                    android:id="@+id/list_item_macro_toggle_fade"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/list_item_macro_toggle_switch"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>