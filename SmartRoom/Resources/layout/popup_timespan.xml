<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dip"
    android:paddingVertical="15dip">

    <TextView 
        android:id="@+id/popup_timespan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="20dip"
        android:text="@string/popup_title_timespan"/>
    <LinearLayout
        android:id="@+id/popup_timespan_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_timespan_title"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/popup_timespan_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="2"
            android:inputType="number"
            android:textSize="24dp"
            android:text="00"
            android:gravity="center"
            android:hint="hh"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/popup_timespan_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="2"
            android:inputType="number"
            android:textSize="24dp"
            android:text="00"
            android:gravity="center"
            android:hint="mm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/popup_timespan_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="2"
            android:inputType="number"
            android:textSize="24dp"
            android:text="10"
            android:gravity="center"
            android:hint="ss"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:gravity="bottom"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/popup_timespan_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="3"
            android:minEms="2"
            android:inputType="number"
            android:textSize="24dp"
            android:text="000"
            android:gravity="center"
            android:hint="fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/popup_timespan_time">
        <Button
            android:id="@+id/popup_timespan_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dip"
            android:backgroundTint="?android:attr/colorAccent"
            android:textColor="@color/foreground_material_dark"
            android:text="@string/button_cancel"/>
        <Button
            android:id="@+id/popup_timespan_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dip"
            android:backgroundTint="?android:attr/colorAccent"
            android:textColor="@color/foreground_material_dark"
            android:text="@string/button_ok"/>
    </LinearLayout>
</RelativeLayout>
