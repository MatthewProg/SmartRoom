<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:background="@color/background_material_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_item_sensors_value_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@android:string/untitled"
            android:textStyle="bold"
            android:autoSizeMaxTextSize="24dp"
            android:autoSizeMinTextSize="14dp"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="2dp"
            android:textSize="24dp"
            android:maxLines="1"/>
        <ImageButton
            android:id="@+id/list_item_sensors_value_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/accessibility_refresh"
            android:src="@drawable/ic_refresh"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:background="@android:color/transparent"
            android:tint="@color/button_material_dark" />
        <ImageButton
            android:id="@+id/list_item_sensors_value_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/accessibility_edit"
            android:src="@drawable/ic_edit"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:background="@android:color/transparent"
            android:tint="@color/button_material_dark" />
        <ImageButton
            android:id="@+id/list_item_sensors_value_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/accessibility_delete"
            android:src="@drawable/ic_trash"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:background="@android:color/transparent"
            android:tint="@color/button_material_dark" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_item_sensors_value_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="@string/text_value"/>
        <TextView
            android:id="@+id/list_item_sensors_value_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="255"/>
    </LinearLayout> 
</LinearLayout>