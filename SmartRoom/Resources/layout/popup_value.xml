<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dip"
    android:paddingVertical="15dip">

    <TextView 
        android:id="@+id/popup_value_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="20dip" />
    <TextView 
        android:id="@+id/popup_value_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_value_title"
        android:maxLines="1"
        android:textStyle="normal"
        android:textSize="14dip"/>
    <EditText
        android:id="@+id/popup_value_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_value_subtitle"
        android:inputType="text" 
        android:hint="@string/text_value" 
        android:imeOptions="actionDone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/popup_value_value">
        <Button
            android:id="@+id/popup_value_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dip"
            android:text="@string/button_cancel"/>
        <Button
            android:id="@+id/popup_value_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dip"
            android:text="@string/button_ok"/>
    </LinearLayout>
</RelativeLayout>
