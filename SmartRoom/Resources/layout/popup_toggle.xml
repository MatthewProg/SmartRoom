<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dip"
    android:paddingVertical="15dip">

    <TextView
        android:id="@+id/popup_toggle_name"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_title_switch"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="2dp"/>
    <EditText
        android:id="@+id/popup_toggle_title"
        android:layout_below="@id/popup_toggle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"     
        android:inputType="textAutoCorrect" 
        android:hint="@string/text_title"
        android:textSize="18dp"
        android:imeOptions="actionDone"/>
    <LinearLayout
        android:id="@+id/popup_toggle_layout_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/popup_toggle_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_toggle_pin"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/popup_toggle_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="3"
                android:minEms="2"
                android:layout_marginLeft="3dp"
                android:inputType="textCapCharacters"
                android:paddingLeft="5dp"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/popup_toggle_layout_settings">
        <Button
            android:id="@+id/popup_toggle_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dip"
            android:text="@string/button_cancel"/>
        <Button
            android:id="@+id/popup_toggle_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dip"
            android:text="@string/button_save"/>
    </LinearLayout>
</RelativeLayout>
